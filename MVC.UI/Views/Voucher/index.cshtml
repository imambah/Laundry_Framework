
@model IEnumerable<Web.Dto.VoucherDbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Voucher</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Hutang</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data Voucher</h3>
        </div>
        <div class="box-body">
            <p>
               
                <a class="btn btn-warning " href="@Url.Action("CreateDetail")" role="button" ><i class="fa fa-plus"></i> Tambah Voucher</a>
               
            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        @*<th>
            Cabang
        </th>*@

                        <th>
                            Kode Voucher
                        </th>
                        <th>
                            Tanggal Voucher
                        </th>
                        <th>
                            Keterangan
                        </th>
                        <th>
                            Nominal
                        </th>
                        <th>
                            Status
                        </th>

                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>


                            <td>
                                @Html.DisplayFor(modelItem => item.voucher_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.voucher_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nominal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td>
                                <a class="text-primary" href="@Url.Action("Details", new { supplier_id=item.voucher_code })" data-toggle="tooltip" title="Detail"><i class="fa fa-money"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
