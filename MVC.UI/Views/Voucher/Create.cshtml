@model Web.Dto.VoucherDbo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    List<SelectListItem> listVoucher = new List<SelectListItem>();
    listVoucher.Add(new SelectListItem
    {
        Text = "-- Pilih Jenis Voucher --",
        Value = "",
        Selected = true
    });
    listVoucher.Add(new SelectListItem
    {
        Text = "Voucher IN",
        Value = "IN",

    });
    listVoucher.Add(new SelectListItem
    {
        Text = "Voucher OUT",
        Value = "OUT",
    });


}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Voucher</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Voucher Baru</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Data Voucher</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.Hidden("hdfuser", @Session["Fullname"].ToString())

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kode Voucher</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.voucher_code, new { @class = "form-control", placeholder = "Kode Voucher", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.voucher_code)
                      @*  @Html.TextBox("voucher_code", (string)ViewBag.voucher_code, new { @class = "form-control", placeholder = "Kode Voucher", disabled = "disabled" })*@

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Tanggal Voucher</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.voucher_date, new { @class = "form-control", placeholder = "Tanggal Voucher", required = "required" })
                        @Html.ValidationMessageFor(model => model.voucher_date)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Keterangan</div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.description, new { @class = "form-control", placeholder = "Keterangan", required = "required" })
                        @Html.ValidationMessageFor(model => model.description)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nominal</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.nominal, new { @class = "form-control", placeholder = "Nominal", @type = "number" })
                        @Html.ValidationMessageFor(model => model.nominal)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Status</div>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(model => model.status, listVoucher, new { @class = "form-control", placeholder = "Voucher Type" })
                        @Html.ValidationMessageFor(model => model.status)
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

<script type="text/javascript">
    $(document).ready(function () {
        $("#voucher_date").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        })
    });


</script>