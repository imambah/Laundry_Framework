
@model Web.Dto.tbl_parameter

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Parameter</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Parameter</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Ubah Data Parameter</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @*@Html.HiddenFor(model => model.id)*@

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nama Tabel</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nama_tabel, new { @class = "form-control", placeholder = "Nama Tabel", required = "required" })
                        @Html.ValidationMessageFor(model => model.nama_tabel)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kode Tabel</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.kode_tabel, new { @class = "form-control", placeholder = "Kode Tabel", required = "required" })
                        @Html.ValidationMessageFor(model => model.kode_tabel)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nama Panjang</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nama_panjang, new { @class = "form-control", placeholder = "Nama Panjang" })
                        @Html.ValidationMessageFor(model => model.nama_panjang)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nama Pendek</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nama_pendek, new { @class = "form-control", placeholder = "Nama Pendek" })
                        @Html.ValidationMessageFor(model => model.nama_pendek)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nilai</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nilai, new { @class = "form-control", placeholder = "Nilai" })
                        @Html.ValidationMessageFor(model => model.nilai)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Update</button>
                    </div>
                </div>
            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
