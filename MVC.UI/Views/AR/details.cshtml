
@model IEnumerable<Web.Dto.Report_ARDbo>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Piutang</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Piutang</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Detail Data Piutang</h3>
        </div>
        <div class="box-body">
            <p>

                <a class="btn btn-warning " href="@Url.Action("Print")" role="button"><i class="fa fa-print"></i> Print</a>

            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>
                            Nama Konsumen
                        </th>
                        <th>
                            Invoice
                        </th>

                        <th>
                            Tanggal Invoice
                        </th>
                        <th>
                            Nilai Piutang
                        </th>

                        <th>
                            Sisa Piutang
                        </th>

                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.custname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.invoice_no)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.invoice_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.amt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.outstanding)
                            </td>
                            <td>
                                <a class="text-primary" href="@Url.Action("Bayar", new { nilaiPiutang = item.outstanding, invoice_no =  item.invoice_no })" data-toggle="tooltip" title="Bayar"><i class="fa fa-money"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
