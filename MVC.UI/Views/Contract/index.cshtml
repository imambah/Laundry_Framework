
@model IEnumerable<Web.Dto.Master_ContractDbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Contract PriceList</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Contract</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data Contract</h3>
        </div>
        <div class="box-body">
            <p>
               
                <a class="btn btn-warning " href="@Url.Action("Create")" role="button" ><i class="fa fa-plus"></i> Tambah Data</a>
               
            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>
                            Client ID
                        </th>

                        <th>
                            Nama Klien
                        </th>
                        <th>
                            Layanan ID
                        </th>
                        <th>
                            Nama Layanan
                        </th>

                        <th>
                            Harga
                        </th>

                        <th>
                            Status Record
                        </th>

                        <th>Aksi</th>
                        @*<th hidden>
                            ID
                        </th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Kode_Klien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nama_Klien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kode_layanan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nama_layanan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Harga)
                            </td>
                            <td>
                                @if (item.is_delete == 0)
                                {

                                    @("Aktif") }
                                else
                                {
                                    <p style="color:red">Tidak Aktif</p>
                                }
                            </td>
                            <td>
                                @if (item.is_delete == 0)
                                {
                                    <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                    <a class="text-success" href="@Url.Action("Edit", new { id=item.id })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>
                                    <a class="text-danger" href="@Url.Action("Delete", new { id=item.id  })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>
                                }
                                else
                                {
                                    <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                    <a class="text-success" href="@Url.Action("Active", new { id=item.id  })" data-toggle="tooltip" title="Aktif" onclick="return confirm('Anda yakin akan mengaktifkan kembali item ini?')"><i class="fa fa-rotate-right"></i></a>
                                }
                            </td>
                            @*<td>
                                @Html.HiddenFor(modelItem => item.id)
                            </td>*@

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
