<section class="content-header">
    <h1>DASHBOARD</h1>

</section>
<section class="content">


    <section class="content">
        <div class="callout callout-warning">
            <h4>DASHBOARD LAUNDRY MONITORING  </h4>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Filter Dashboard</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-sm-1 control-label">Bulan</div>
                            <div class="col-sm-2">

                                @Html.DropDownList("bulan", listBulan, new { @class = "form-control", placeholder = "Bulan" })
                            </div>
                            <div class="col-sm-1 control-label">Tahun</div>
                            <div class="col-sm-1">
                                @Html.TextBox("tahun", null, new { id = "tahun", @class = "form-control", placeholder = "Tahun", @value=0,@type = "number", required = "required" })
                            </div>
                            <button type="button" onclick="ViewData()" class="btn btn-success" data-toggle="modal" data-target="">
                                &nbsp;<i class="fa fa-search-plus"></i>
                                View&nbsp;
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <!-- /.col (LEFT) -->
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">Account Receivable</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body chart-responsive">
                        <div class="chart" id="AR" style="height: 300px; position: relative;"></div>
                    </div>
                </div>



            </div>
            <!-- /.col (RIGHT) -->
            <div class="col-md-4">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Account Payable</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body chart-responsive">
                        <div class="chart" id="AP" style="height: 300px; position: relative;"></div>
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <!-- BAR CHART -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Sales By Branch</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <div class="box-body chart-responsive">
                        <div class="chart" id="bar-chart" style="height: 300px;"></div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

        </div>
        <!-- /.row -->

    </section>
</section>


