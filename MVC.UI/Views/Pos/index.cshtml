
@model IEnumerable<Web.Dto.POSDbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Transaksi</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Transaksi</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data Transaksi Laundry</h3>
        </div>
        <div class="box-body">
            <p>

                <a class="btn btn-warning " href="@Url.Action("Create")" role="button"><i class="fa fa-plus"></i> Tambah Data</a>

            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            No.Nota
                        </th>
                        <th>
                            Pelanggan
                        </th>

                        <th>
                            Tgl Terima 
                        </th>
                        <th>
                            Tgl Selesai
                        </th>
                        <th>
                            Jenis
                        </th>

                        <th>
                            Total Item
                        </th>

                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.transaction_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.customer_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.receiveddate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.finishdate)
                            </td>
                            <td> 
                                @Html.DisplayFor(modelItem => item.transaction_type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.jumlah_item)
                            </td>
                            <td>
                                <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                <a class="text-success" href="@Url.Action("Edit", new { id=item.id })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>
                                <a class="text-danger" href="@Url.Action("Delete", new { id=item.id  })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>
                                <a class="text-success" href="@Url.Action("Print", new { id=item.id })" data-toggle="tooltip" title="Print"><i class="fa fa-print"></i></a>
                                <a class="text-success" href="@Url.Action("Selesai", new { id=item.id })" data-toggle="tooltip" title="Proses Selesai"><i class="fa fa-check"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
