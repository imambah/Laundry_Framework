    $('#updateform').submit(function () {
            SaveData();
    });

    function SaveData() {
        var strTransID = document.getElementById("transaction_id");
        alert(strTransID);
        //$.post('@Url.Action("EditTrans", "POS")',{ transactionid: strTransID}, function (data) { });

    }





</script>







