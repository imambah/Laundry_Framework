@model Web.Dto.Master_BankDbo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Bank</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Bank</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Data Bank</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class = "col-sm-2 control-label">Nama Bank</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Nama Bank" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Cabang</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Area, new { @class = "form-control", placeholder = "Nama Cabang" })
                        @Html.ValidationMessageFor(model => model.Area)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">No Rekening</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Account, new { @class = "form-control", placeholder = "No Rekening" })
                        @Html.ValidationMessageFor(model => model.Account)
                    </div>
                </div>

              
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->