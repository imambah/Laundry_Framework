
@model IEnumerable<Web.Dto.AP_DetailDbo>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Hutang</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Hutang</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Detail Data Hutang</h3>
        </div>
        <div class="box-body">
            <p>

                <a class="btn btn-warning " href="@Url.Action("Print", new { id =  ViewBag.ID})" role="button"><i class="fa fa-print"></i> Print</a>

            </p>

            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>
                            Nama Supplier
                        </th>
                        <th>
                            GR NO 
                        </th>

                        <th>
                            GR Date
                        <th>
                            Total
                        </th>

                        <th>
                            Outstanding 
                        </th>
                        <th>
                            Record
                        </th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.supplier_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.gr_number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.gr_date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.outstanding)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.recordid)
                            </td>
                            <td>
                                <a class="text-primary" href="@Url.Action("Bayar", new { nilaiPiutang = item.outstanding, gr_no =  item.gr_number })" data-toggle="tooltip" title="Bayar"><i class="fa fa-money"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
