
@model IEnumerable<Web.Dto.APDbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Hutang</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Hutang</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data HUTANG</h3>
        </div>
        <div class="box-body">
            @*<p>
               
                <a class="btn btn-warning " href="@Url.Action("Print")" role="button" ><i class="fa fa-print"></i> Print</a>
               
            </p>*@
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        @*<th>
                            Cabang
                        </th>*@

                        <th>
                            Kode Supplier
                        </th>
                        <th>
                            Nama Supplier
                        </th>
                        <th>
                            Nilai Hutang
                        </th>

                        <th>
                            Sisa Hutang
                        </th>

                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            @*<td>
                                @Html.DisplayFor(modelItem => item.branchid)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.supplier_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.supplier_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.outstanding)
                            </td>
                            <td>
                                <a class="text-primary" href="@Url.Action("Details", new { supplier_id=item.supplier_id })" data-toggle="tooltip" title="Detail"><i class="fa fa-money"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
