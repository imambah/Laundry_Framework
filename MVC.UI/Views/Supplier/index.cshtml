
@model IEnumerable<Web.Dto.Master_SupplierDbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Suplier</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Suplier</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data Suplier</h3>
        </div>
        <div class="box-body">
            <p>
                <a class="btn btn-warning " href="@Url.Action("Create")" role="button" aria-pressed="true"><i class="fa fa-plus"></i> Tambah Data</a>
            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Kode Suplier
                        </th>

                        <th>
                            Nama Suplier
                        </th>
                        <th>
                            Alamat Suplier
                        </th>
                        <th>
                            No Telp
                        </th>
                        <th>
                            Status Record
                        </th>


                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.kode_suplier)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama_suplier)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.alamat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.no_telp)
                            </td>
                            <td>
                                @if (item.is_delete == 0)
                                {

                                    @("Aktif") }
                                else
                                {
                                    <p style="color:red">Tidak Aktif</p>
                                }
                            </td>
                            <td>
                                @if (item.is_delete == 0)
                                {
                                    <a class="text-primary" href="@Url.Action("Details", new { supplier_code=item.kode_suplier })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                    <a class="text-success" href="@Url.Action("Edit", new { supplier_code=item.kode_suplier })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>
                                    <a class="text-danger" href="@Url.Action("Delete", new { supplier_code=item.kode_suplier })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>

                                }
                                else
                                {
                                    <a class="text-primary" href="@Url.Action("Details", new { supplier_code=item.kode_suplier })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                    <a class="text-success" href="@Url.Action("Active", new { supplier_code=item.kode_suplier  })" data-toggle="tooltip" title="Aktif" onclick="return confirm('Anda yakin akan mengaktifkan kembali item ini?')"><i class="fa fa-rotate-right"></i></a>
                                }

                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
