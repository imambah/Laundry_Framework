@model Web.Dto.Master_Klien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Konsumen</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Konsumen</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Data Konsumen</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group">
                    <div class="col-sm-2 control-label">Nama Klien</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nama_klien, new { @class = "form-control", placeholder = "Nama Klien" })
                        @Html.ValidationMessageFor(model => model.nama_klien)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Alamat</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.alamat, new { @class = "form-control", placeholder = "Alamat" })
                        @Html.ValidationMessageFor(model => model.alamat)
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-2 control-label">No Telp</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.no_telp, new { @class = "form-control", placeholder = "No Telp" })
                        @Html.ValidationMessageFor(model => model.no_telp)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kota</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.kota, new { @class = "form-control", placeholder = "Kota" })
                        @Html.ValidationMessageFor(model => model.kota)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Area</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.area, new { @class = "form-control", placeholder = "Area" })
                        @Html.ValidationMessageFor(model => model.area)
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-2 control-label">Negara</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.negara, new { @class = "form-control", placeholder = "Negara" })
                        @Html.ValidationMessageFor(model => model.negara)
                    </div>
                </div>


                <!--<div class="form-group">-->
                    @*@Html.LabelFor(model => model.BranchCode, new { @class = "col-sm-2 control-label" })*@
                    <!--<div class="col-sm-2 control-label">Negara</div>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(model => model.negara, ViewBag.NegaraList as SelectList, new { @class = "form-control" })

                    </div>
                </div>-->

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kode Pos</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.kodepos, new { @class = "form-control", placeholder = "Kode Pos" })
                        @Html.ValidationMessageFor(model => model.kodepos)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Email</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.email)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">PIC</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.PIC, new { @class = "form-control", placeholder = "PIC" })
                        @Html.ValidationMessageFor(model => model.PIC)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">ID Pajak</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.tax_id, new { @class = "form-control", placeholder = "ID Pajak" })
                        @Html.ValidationMessageFor(model => model.tax_id)
                    </div>
                    <div class="col-sm-1 control-label">Nama Pajak </div>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.tax_name, new { @class = "form-control", placeholder = "Nama Pajak" })
                        @Html.ValidationMessageFor(model => model.tax_name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Alamat Pajak </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.tax_address, new { @class = "form-control", placeholder = "Alamat Pajak" })
                        @Html.ValidationMessageFor(model => model.tax_address)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Akun Bank</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.bank_account, new { @class = "form-control", placeholder = "Akun Bank" })
                        @Html.ValidationMessageFor(model => model.bank_account)
                    </div>

                    <div class="col-sm-1 control-label">Nama Bank</div>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.bank_name, new { @class = "form-control", placeholder = "Nama Bank" })
                        @Html.ValidationMessageFor(model => model.bank_name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label"> Cabang </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.bank_branch, new { @class = "form-control", placeholder = "Cabang" })
                        @Html.ValidationMessageFor(model => model.bank_branch)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Status</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.status, new { @class = "form-control", placeholder = "Status" })
                        @Html.ValidationMessageFor(model => model.status)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">COA</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.COA, new { @class = "form-control", placeholder = "COA" })
                        @Html.ValidationMessageFor(model => model.COA)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">TOP</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.TOP, new { @class = "form-control", placeholder = "TOP" })
                        @Html.ValidationMessageFor(model => model.TOP)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">profit_share</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.profit_share, new { @class = "form-control", placeholder = "profit_share" })
                        @Html.ValidationMessageFor(model => model.profit_share)
                    </div>
                </div>


                @*<div class="form-group">
                    <div class="col-sm-2 control-label">Sebagai</div>
                    <div class="col-sm-2">

                        @Html.CheckBoxFor(model => model.is_customer)  Konsumen
                    </div>
                    <div class="col-sm-2">
                        @Html.CheckBoxFor(model => model.is_supplier)  Suplier
                    </div>
                </div>*@


                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->