@model Web.Dto.Master_Klien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Client</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Client</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Data Client</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group">
                    <div class="col-sm-2 control-label">Nama Klien</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.nama_klien, new { @class = "form-control", placeholder = "Nama Klien" })
                        @Html.ValidationMessageFor(model => model.nama_klien)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Alamat</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.alamat, new { @class = "form-control", placeholder = "Alamat" })
                        @Html.ValidationMessageFor(model => model.alamat)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">No Telp</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.no_telp, new { @class = "form-control", placeholder = "No Telp" })
                        @Html.ValidationMessageFor(model => model.no_telp)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Sebagai</div>
                    <div class="col-sm-2">

                        @Html.CheckBoxFor(model => model.is_customer)  Konsumen
                    </div>
                    <div class="col-sm-2">
                        @Html.CheckBoxFor(model => model.is_supplier)  Suplier
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->