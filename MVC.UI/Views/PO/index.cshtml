
@model IEnumerable<Web.Dto.PODbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Transaksi</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Purchase Order</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data Purchase Order</h3>
        </div>
        <div class="box-body">
            <p>

                <a class="btn btn-success " href="@Url.Action("Create")" role="button"><i class="fa fa-plus"></i> Tambah Data</a>

            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            No.PO
                        </th>
                        <th>
                            Supplier
                        </th>

                        <th>
                            Tgl PO 
                        </th>
                       

                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PO_number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.customerid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.create_date)
                            </td>
                          
                            <td>
                                    <a class="text-success" href="@Url.Action("Edit", new { id=item.PO_number })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>
                                    <a class="text-danger" href="@Url.Action("Delete", new { id=item.PO_number  })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>
                                    <a class="text-success" href="@Url.Action("Print", new { id=item.PO_number })" data-toggle="tooltip" title="Print"><i class="fa fa-print"></i></a>
                                    <a class="text-success" href="@Url.Action("Selesai", new { id=item.PO_number })" data-toggle="tooltip" title="Proses Selesai"><i class="fa fa-check"></i></a>
                             </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
