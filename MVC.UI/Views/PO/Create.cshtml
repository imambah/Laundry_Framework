@model IEnumerable<Web.Dto.Master_BarangDbo>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
    }

    .ui-autocomplete {
        height: 100px;
    }
</style>




<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Purchase Order</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Transaksi</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Data Purchase Order</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "saveform", @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-sm-2 control-label">PO Number</div>
                    <div class="col-sm-3">
                        @Html.TextBox("PO_Number", null, new { @class = "form-control", placeholder = "PO Number", required = "required", disabled = "disabled" })
                        @*@Html.ValidationMessageFor("PO_Number")*@
                    </div>



                    <div class="col-sm-2 control-label">PO Date </div>
                    <div class="col-sm-2">
                        @*@Html.TextBoxFor(model => model.PO_Date, new { @class = "form-control", placeholder = "PO Date", required = "required", disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.PO_Date)*@
                        @Html.TextBox("PO_Date", DateTime.Today.ToString("dd/MM/yyyy"), new { id = "PO_Date", @class = "form-control", @disabled = "disabled" })
                        @Html.Hidden("PO_Date", DateTime.Today)
                    </div>
                </div>

                <div class="form-group">


                    <div class="col-sm-2 control-label">Customer Name</div>
                    <div class="col-sm-3">
                        @*<input id="auto-complete">*@
                        @Html.Editor("customer_name", new { htmlAttributes = new { id = "customer_name", @class = "form-control", placeholder = "Customer Name ", required = "required" } })
                    </div>

                    <div class="col-sm-2 control-label">Cus ID</div>
                    <div class="col-sm-2">
                        @Html.TextBox("customerid", null, new { id = "customerid", @class = "form-control", placeholder = "Delivery Date", required = "required", disabled = "disabled" })

                    </div>


                </div>
                <div class="form-group">

                    <div class="col-sm-2 control-label">Delivery Date Plane</div>
                    <div class="col-sm-3">
                        @Html.TextBox("DeliveryDatePlan", null, new { id = "DeliveryDatePlan", @class = "form-control", placeholder = "Delivery Date Plane", required = "required" })

                    </div>

                    <div class="col-sm-2 control-label">Term Of Payment</div>
                    <div class="col-sm-2">
                        @Html.TextBox("Term_Of_Payment", null, new { id = "Term_Of_Payment", @class = "form-control", placeholder = "Term Of Payment", required = "required" })

                    </div>

                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">PO Description </div>
                    <div class="col-sm-4">
                        @Html.TextBox("PO_Description", null, new { id = "PO_Description", @class = "form-control", placeholder = "PO Description", required = "required" })

                    </div>
                </div>

                <div class="box-header with-border">
                    <h3 class="box-title">Tambah Data Barang</h3>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-sm-1 control-label">Kode Barang</div>
                    <div class="col-sm-1">
                        @Html.TextBox("item_code", null, new { id = "item_code", @class = "form-control", placeholder = "Kode Barang", required = "required", disabled = "disabled" })

                    </div>


                    <div class="col-sm-1 control-label">
                        Nama Barang
                    </div>
                    <div class="col-sm-2">
                        @Html.TextBox("item_name", null, new { id = "item_name", @class = "form-control", placeholder = "Nama Barang", required = "required", disabled = "disabled" })

                    </div>

                    <div class="col-sm-1">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#barangModal">
                            &nbsp;<i class="fa fa-search"></i>
                            Cari
                        </button>

                    </div>

                    <div class="col-sm-1 control-label">Harga</div>
                    <div class="col-sm-2">
                        @Html.TextBox("item_price", null, new { id = "item_price", @class = "form-control", placeholder = "Harga Barang", required = "required", disabled = "disabled" })

                    </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1 control-label">Stock</div>
                        <div class="col-sm-1">
                            @Html.TextBox("stock", null, new { id = "stock", @class = "form-control", placeholder = "Stock", required = "required", disabled = "disabled" })

                        </div>

                        <div class="col-sm-1 control-label">Qty</div>
                        <div class="col-sm-1">
                            @Html.TextBox("qty", null, new { id = "qty", @class = "form-control", placeholder = "Qty", required = "required" })

                        </div>
                        <div class="col-sm-1">

                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="">
                                &nbsp;<i class="fa fa-plus"></i>
                                Tambah
                            </button>
                        </div>

                    </div>
                    <table id="tabelBarang" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Nama Barang
                                    @*@Html.DisplayNameFor(model => model.Username)*@
                                </th>
                                <th>
                                    Kode Barang
                                    @*@Html.DisplayNameFor(model => model.FullName)*@
                                </th>
                                <th>
                                    Kategori
                                    @*@Html.DisplayNameFor(model => model.LastLogin)*@
                                </th>
                                <th>
                                    UoM
                                    @*@Html.DisplayNameFor(model => model.LastLogin)*@
                                </th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>


                    <div class="form-group">
                        <div class="col-sm-10"></div>
                        <div class="col-sm-2 text-right">
                            <button type="submit" name="savedata" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                        </div>
                    </div>
                    }
                    <div>
                        <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
                    </div>

                </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal" id="barangModal">
    <div class="modal-dialog" style="width:1250px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">List Barang</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="tabelBarangPopup" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Kode Barang
                            </th>
                            <th>
                                Nama Barang
                            </th>
                            <th>
                                Kategori
                            </th>
                            <th>
                                Qty Stock
                            </th>
                            <th>
                                Harga
                            </th>
                            <th>
                                Aksi
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Group_Desc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Buffer_Stock)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price_Inventory)
                                </td>
                                <td>
                                    @*<a class="text-primary" href="@Url.Action("Select", new { id=item.id })" data-toggle="tooltip" title="Pilih Barang"><i class="fa fa-check"></i></a>
            <button class="btnSelect">Select</button>*@
                                    <button type="button" class="btnSelect btn btn-primary" data-toggle="modal" data-target="#barangModal">
                                        &nbsp;<i class="fa fa-check"></i>
                                        Pilih
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">

    //$(document).ready(function () {

    //    // code to read selected table row cell data (values).
        
    //});

    $("#tabelBarangPopup").on('click', '.btnSelect', function () {
        // get the current row
        var currentRow = $(this).closest("tr");

        var col1 = currentRow.find("td:eq(0)").text(); // get current row 1st TD value
        var col2 = currentRow.find("td:eq(1)").text(); // get current row 2nd TD
        var col3 = currentRow.find("td:eq(2)").text(); // get current row 3rd TD
        var col4 = currentRow.find("td:eq(3)").text(); // get current row 3rd TD
        var col5 = currentRow.find("td:eq(4)").text(); // get current row 3rd TD
        var data = col1 + "\n" + col2 + "\n" + col3;
        
        $('#item_code').val(col1.trim());
        $('#item_name').val(col2.trim());
        $('#stock').val(col4.trim());
        $('#item_price').val(col5.trim());
        

    });
    $("#DeliveryDatePlan").datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: 'dd/mm/yy'
    })
    $("#customername").autocomplete({
        source: function (request, response) {
            //var csname = 'Counter';
            $.ajax({
                type: "POST",
                url: "/PO/getName?Prefix=" + $('#customername').val(),
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                //data: { Prefix: $('#customer_name').val() },
                success: function (data) {
                    var result = $.map(data, function (item) {
                        return {
                            label: item.nama_klien,
                            value: item.alamat,
                            customertype: item.tipe_konsumen,
                            id: item.kode_klien
                        };
                    });
                    return response(result);
                }
            });
        },
        select: function (event, ui) {
            event.preventDefault();
            $('#customername').val(ui.item.label);
            $('#customerid').val(ui.item.id);

        }
    });

   
</script>







