
@model Web.Dto.BOMDbo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data BOM</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Detail BOM</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Detail Data BOM</h3>
        </div>
        <div class="box-body">
            @using (Html.BeginForm(null,null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)



                <div class="form-group">
                    <div class="col-sm-2 control-label">Kode BOM</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.kode_BOM, new { @class = "form-control", placeholder = "Kode BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.kode_BOM)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Keterangan BOM</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.keterangan_BOM, new { @class = "form-control", placeholder = "Keterangan BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.keterangan_BOM)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Harga Jual</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.harga_jual, new { @class = "form-control", placeholder = "Harga Jual", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.harga_jual)
                    </div>
                </div>


                @Html.HiddenFor(model => model.kode_BOM)
                <p>
                    @*<a class="text-success" href="@Url.Action("Add")"><i class="fa fa-plus"></i> Tambah</a>*@
                    <input type="submit" value="Tambah Data Barang" id="Submit" class="btn btn-success" />
                </p>
            }

            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>

                        <th>
                            Nama Barang
                            @*@Html.DisplayNameFor(model => model.FullName)*@
                        </th>
                        <th>
                            Qty
                            @*@Html.DisplayNameFor(model => model.LastLogin)*@
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.item_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.jumlah)
                            </td>

                            <td>
                                <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>&nbsp;&nbsp;
                                <a class="text-success" href="@Url.Action("Edit", new { id=item.id })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>&nbsp;&nbsp;
                                @*<a class="text-success" href="@Url.Action("ViewDetail", new { id=item.id })" data-toggle="tooltip" title="View Detail"><i class="fa fa-navicon"></i></a>&nbsp;&nbsp;*@
                                <a class="text-danger" href="@Url.Action("Delete", new { id=item.id  })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
