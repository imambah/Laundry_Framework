@model Web.Dto.Master_BarangDbo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    List<SelectListItem> listVAT = new List<SelectListItem>();
    listVAT.Add(new SelectListItem
    {
        Text = "-- Pilih PPn --",
        Value = "",
        Selected = true
    });
    listVAT.Add(new SelectListItem
    {
        Text = "Ya",
        Value = "1",

    });
    listVAT.Add(new SelectListItem
    {
        Text = "Tidak",
        Value = "0",

    });
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Item / Barang</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Item / Barang</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Item / Barang</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group">
                    <div class="col-sm-2 control-label">Nama Barang</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.ItemDesc, new { @class = "form-control", placeholder = "Nama Barang", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.ItemDesc)
                    </div>

                    <div class="col-sm-1 control-label">Barcode</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Barcode, new { @class = "form-control", placeholder = "Barcode", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Barcode)
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kategori</div>
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.Group_Code, ViewBag.GroupList as SelectList, new { @class = "form-control", disabled = "disabled" })
                    </div>

                    <div class="col-sm-1 control-label">UoM</div>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(model => model.UoM, ViewBag.SatuanList as SelectList, new { @class = "form-control", disabled = "disabled" })
                        @*@Html.TextBoxFor(model => model.UoM, new { @class = "form-control", placeholder = "UoM", disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.UoM)*@
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-2 control-label">Harga Permintaan</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Price_Purchase, new { @class = "form-control", placeholder = "Harga Pembelian", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Price_Purchase)
                    </div>
                    <div class="col-sm-1 control-label">Harga Inventory</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Price_Inventory, new { @class = "form-control", placeholder = "Harga Inventory", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Price_Inventory)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Stok</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Stock, new { @class = "form-control", placeholder = "Stok", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Stock)
                    </div>
                    <div class="col-sm-1 control-label">Minimum Stock </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Buffer_Stock, new { @class = "form-control", placeholder = "Buffer Stok", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Buffer_Stock)
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-2 control-label">Persentasi Perusahaan</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Company_Persentage, new { @class = "form-control", placeholder = "Company Persentage", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Company_Persentage)
                    </div>

                    <div class="col-sm-1 control-label">Vat Flag </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Vat_Flag, new { @class = "form-control", placeholder = "Vat Flag", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Vat_Flag)
                    </div>
                </div>

                <div class="form-group">



                    <div class="col-sm-2 control-label">Konversi</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Conversion, new { @class = "form-control", placeholder = "Conversion", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Conversion)
                    </div>

                    <div class="col-sm-1 control-label">Batch No</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.BatchNo, new { @class = "form-control", placeholder = "Batch No", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.BatchNo)
                    </div>
                </div>

            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->