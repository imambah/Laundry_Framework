
@model IEnumerable<Web.Dto.Master_COADbo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Master COA</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">COA</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Data COA</h3>
        </div>
        <div class="box-body">
            <p>
                <a class="btn btn-warning " href="@Url.Action("Create")" role="button" aria-pressed="true"><i class="fa fa-plus"></i> Tambah Data</a>
            </p>
            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Kode COA
                            @*@Html.DisplayNameFor(model => model.Username)*@
                        </th>
                        <th>
                            Nama COA
                            @*@Html.DisplayNameFor(model => model.FullName)*@
                        </th>
                        <th>
                            Kelompok
                            @*@Html.DisplayNameFor(model => model.LastLogin)*@
                        </th>
                        <th>
                            Judul Level 1
                            @*@Html.DisplayNameFor(model => model.LastLogin)*@
                        </th>
                        <th>
                            Judul Level 2
                            @*@Html.DisplayNameFor(model => model.LastLogin)*@
                        </th>

                        <th>
                            D/C
                        </th>
                        <th>Aksi</th>
                        <th hidden>
                            ID
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.kode_COA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama_COA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama_kelompok_COA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama_sub_gl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama_level_COA)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DRCR)
                            </td>

                            <td>
                                @if (item.is_delete == 0)
                                {
                                    <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                    <a class="text-success" href="@Url.Action("Edit", new { id=item.id })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>
                                    <a class="text-danger" href="@Url.Action("Delete", new { id=item.id  })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>
                                }
                                else
                                {
                                    <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>
                                    <a class="text-success" href="@Url.Action("Active", new { id=item.id  })" data-toggle="tooltip" title="Aktif" onclick="return confirm('Anda yakin akan mengaktifkan kembali item ini?')"><i class="fa fa-rotate-right"></i></a>
                                }
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => item.id)
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
