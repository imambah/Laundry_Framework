
@model Web.Dto.CashDbo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Cashflow</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Detail Cashflow</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Detail Data Cashflow</h3>
        </div>
        <div class="box-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kode Voucher</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Voucher_ID, new { @class = "form-control", placeholder = "Kode BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Voucher_ID)
                    </div>
                    <div class="col-sm-1 control-label">Tanggal</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Transaction_date, new { @class = "form-control", placeholder = "Keterangan BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Transaction_date)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Keterangan</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Voucher_Desc, new { @class = "form-control", placeholder = "Kode BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Voucher_Desc)
                    </div>
                    <div class="col-sm-1 control-label">PIC</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.PIC, new { @class = "form-control", placeholder = "Kode BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.PIC)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Bank</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.BankID, new { @class = "form-control", placeholder = "Keterangan BOM", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.BankID)
                    </div>
                    <div class="col-sm-1 control-label">Nilai</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", placeholder = "Harga Jual", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Amount)
                    </div>
                </div>


                @Html.HiddenFor(model => model.Voucher_ID)
                <p>
                    @*<a class="text-success" href="@Url.Action("Add")"><i class="fa fa-plus"></i> Tambah</a>*@
                    <input type="submit" value="Tambah Detail" id="Submit" class="btn btn-success" />
                </p>
            }

            <table id="mydatatable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>

                        <th>
                            COA
                            @*@Html.DisplayNameFor(model => model.FullName)*@
                        </th>
                        <th>
                            Keterangan
                            @*@Html.DisplayNameFor(model => model.FullName)*@
                        </th>
                        <th>
                            Nilai
                            @*@Html.DisplayNameFor(model => model.LastLogin)*@
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.COA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>

                            <td>
                                <a class="text-primary" href="@Url.Action("Details", new { id=item.id })" data-toggle="tooltip" title="Detail"><i class="fa fa-search"></i></a>&nbsp;&nbsp;
                                <a class="text-success" href="@Url.Action("Edit", new { id=item.id })" data-toggle="tooltip" title="Ubah"><i class="fa fa-pencil"></i></a>&nbsp;&nbsp;
                                @*<a class="text-success" href="@Url.Action("ViewDetail", new { id=item.id })" data-toggle="tooltip" title="View Detail"><i class="fa fa-navicon"></i></a>&nbsp;&nbsp;*@
                                <a class="text-danger" href="@Url.Action("Delete", new { id=item.id  })" data-toggle="tooltip" title="Hapus" onclick="return confirm('Anda yakin akan menghapus item ini?')"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
