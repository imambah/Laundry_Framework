@model Web.Dto.CashDbo

@{
    ViewBag.Title = "Create";
    ViewBag.scr = "BK";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Data Cashflow</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Cashflow</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Tambah Data Cashflow</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-sm-2 control-label">Kode Voucher</div>
                    <div class="col-sm-4">
                        @Html.TextBox("Voucher_ID", (string)ViewBag.Kode_Voucher, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Voucher_ID)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Tipe Voucher </div>
                    <div class="col-sm-4">
                        @Html.TextBox("Voucher_Type", (string)ViewBag.Tipe_Voucher, new { @class = "form-control",@readonly = "readonly"})
                        @Html.ValidationMessageFor(model => model.Voucher_Type)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">Tanggal</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Transaction_date, new { @class = "form-control", placeholder = "Tgl Selesai" })
                        @Html.ValidationMessageFor(model => model.Transaction_date)

                    </div>
                </div>
                <div class="form-group">
                    @if (ViewBag.scr == "BM")
                    {
                        <div class="col-sm-2 control-label">Terima dari</div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.PIC, new { @class = "form-control", placeholder = "Terima dari" })
                            @Html.ValidationMessageFor(model => model.PIC)
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-2 control-label">Diberikan kepada</div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.PIC, new { @class = "form-control", placeholder = "Diberikan kepada" })
                            @Html.ValidationMessageFor(model => model.PIC)
                        </div>
                    }
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nilai </div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", placeholder = "Nilai" })
                        @Html.ValidationMessageFor(model => model.Amount)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Keterangan</div>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Voucher_Desc, new { @class = "form-control", placeholder = "Keterangan" })
                        @Html.ValidationMessageFor(model => model.Voucher_Desc)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Melalui Bank</div>
                    <div class="col-sm-4">
                        @*@Html.TextBoxFor(model => model.BankID, ViewBag.BANKList as SelectList, new { @class = "form-control", placeholder = "Bank" })*@
                        @Html.DropDownListFor(model => model.BankID, ViewBag.BANKList as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BankID)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }

            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


<script type="text/javascript">
    $(document).ready(function () {
        $("#Transaction_date").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd-mm-yy'
        });
    });

</script>