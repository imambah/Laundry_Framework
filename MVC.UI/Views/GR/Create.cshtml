@model IEnumerable<Web.Dto.GR_TransDbo>

@{
    var Item = Model.FirstOrDefault();
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
    }

    .ui-autocomplete {
        height: 100px;
