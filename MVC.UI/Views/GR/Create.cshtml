                                </td>
                                <td style='text-align:center'>
                                    <input type='text' id='keterangan' name='keterangan' value='' style='width:100%;text-align:left;'>
                                </td>

                            </tr>
                        }*@
                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2 text-right">
                        <button type="submit" name="savedata" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }
            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>

<script type="text/javascript">

    $(document).ready(function () {
        var po_no = $("#PO_Number").val();
            $.ajax({
                type: "post",
                url: "/PO/GetItemByPoNo?po_number=" + po_no,
                data: "[]",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    var output = data.map(i => "<tr><td>" + i.item_code + "</td><td>" + i.item_name + "</td><td style='text-align:center'>" + i.qty + "</td><td style='text-align:center'>" + i.sisa + "</td><td style='text-align:center'><input type='text' id='terima' name='terima' value=0 style='width:50px;text-align:right;' onkeydown='return ValidateNumber(event);'></td><td><input type='text' id='remarks' name='remarks' style='width:100%;'></td></tr>");
                     $("#tableBody").html(output);
                }
            })
    });


    $('#saveform').submit(function () {
        var sTableName = document.getElementById("tabelBarang");
        var status = validateValue();
        if (status == false){
            Alert("Nilai Terima harus lebih kecil dari sisa");
        }
        else {
            var rows = [];
            for (var i = 1; i < sTableName.rows.length; i++) {
                var _item_code = sTableName.rows[i].cells[0].innerText;
                var _nama_barang = sTableName.rows[i].cells[1].innerText;
                var _pesan = sTableName.rows[i].cells[2].innerText;
                var _sisa = sTableName.rows[i].cells[3].innerText;
                var _terima = sTableName.rows[i].cells[4].firstChild.value;
                var _keterangan = sTableName.rows[i].cells[5].firstChild.value;
                var row = _item_code + "|" + _nama_barang + "|" + _pesan + "|" + _sisa + "|" + _terima + "|" + _keterangan;
                rows.push(row);
            }
            //row.cells[index].getElementsByName('inputcell' + index)[0].value;
            //detail -====================================================
            //insert to header====================
            var _ponumber = $("#PO_Number").val();
            var _podate = $("#tgl_po").val();
            var _supplier_id = $("#supplier_id").val();
            var _supplier_name = $("#supplier_name").val();
            var _rencana_kirim = $("#rencana_kirim").val();
            var _cara_bayar = $("#cara_bayar").val();
            var _po_desc = $("#PO_description").val();

            var _header = _ponumber + '|' + _podate + '|' + _supplier_id + '|' + _supplier_name + '|' + _rencana_kirim + '|' + _cara_bayar + '|' + _po_desc
            // header ============================
            $.post('@Url.Action("Create", "GR")', { rows: rows, header: _header }, function (data) {});
        }

    });

    function ValidateNumber(e) {
        var charCode;
        if (e.keyCode > 0) {
            charCode = e.which || e.keyCode;
        }
        else if (typeof (e.charCode) != "undefined") {
            charCode = e.which || e.keyCode;
        }
        if (charCode == 46)
            return true;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    };

    function validateValue() {
        /*alert('kadie');*/
        var sTableName = document.getElementById("tabelBarang");
        for (var i = 1; i < sTableName.rows.length; i++) {
            var _sisa = sTableName.rows[i].cells[3].innerText;
            var _terima = sTableName.rows[i].cells[4].firstChild.value;
            if (_terima > _sisa) {
                /*alert('Nilai Terima harus lebih kecil dari Sisa');*/
                return false;
            }
        }
        return true;
    }
</script>









