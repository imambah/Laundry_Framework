@model IEnumerable <Web.Dto.GR_TransDbo>

@{
    var Item = Model.FirstOrDefault();
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
    }

    .ui-autocomplete {
        height: 100px;
    }
</style>


<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Detail GR</h3>
        </div>
        <div class="box-body">

            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "saveform", @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-sm-2 control-label">Nomor PO</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => Item.PO_Number, new { @class = "form-control", placeholder = "ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.PO_Number)
                    </div>

                    <div class="col-sm-2 control-label">Tanggal PO </div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => Item.tgl_po, new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.tgl_po)
                    </div>
                </div>

                <div class="form-group">


                    <div class="col-sm-2 control-label">Nama Supplier</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => Item.supplier_name, new { @class = "form-control", placeholder = "ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.supplier_name)
                    </div>

                    <div class="col-sm-2 control-label">Kode Supplier</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => Item.supplier_id, new { @class = "form-control", placeholder = "ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.supplier_id)
                    </div>


                </div>
                <div class="form-group">

                    <div class="col-sm-2 control-label">Rencana Kirim</div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => Item.rencana_kirim, new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.rencana_kirim)
                    </div>

                    <div class="col-sm-2 control-label">Cara Bayar</div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => Item.cara_bayar, new { @class = "form-control", placeholder = "ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.cara_bayar)
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-sm-2 control-label">Keterangan</div>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(model => Item.PO_description, new { @class = "form-control", placeholder = "ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => Item.PO_description)
                    </div>
                </div>

                <div class="box-header with-border">
                    <h3 class="box-title">Detail Barang</h3>
                </div>
                <br />

                <table id="tabelBarang" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Kode Barang
                            </th>
                            <th>
                                Nama Barang
                            </th>

                            <th>
                                Harga
                            </th>
                            <th>
                                Qty
                            </th>
                            <th>
                                Total
                            </th>

                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2 text-right">
                        <button type="submit" name="savedata" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;Simpan</button>
                    </div>
                </div>
            }
            <div>
                <a href="@Url.Action("Index")"><i class="fa fa-reply"></i>&nbsp;&nbsp;Kembali</a>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>







